{
  "name": "anime-apollo-graphql",
  "homepage": "https://kentandrian.github.io/anime-apollo-graphql",
  "version": "0.2.94",
  "private": true,
  "type": "module",
  "scripts": {
    "predeploy": "yarn build",
    "deploy": "gh-pages -d dist",
    "start": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "schema:download": "npx apollo service:download --endpoint=https://anilist.co/graphql ./src/app/graphql/graphql-schema.json",
    "schema:generate-watch": "npx apollo codegen:generate --localSchemaFile=./src/app/graphql/graphql-schema.json --target=typescript --tagName=gql --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@apollo/client": "^3.8.6",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@reduxjs/toolkit": "^1.9.7",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.3",
    "redux-logger": "^3.0.6",
    "reselect": "^4.1.8",
    "styled-components": "^6.1.0",
    "tailwindcss": "^3.3.5",
    "web-vitals": "^3.5.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.2.34",
    "@types/react-dom": "^18.2.14",
    "@types/redux-logger": "^3.0.11",
    "@types/styled-components": "^5.1.29",
    "@vitejs/plugin-react": "^4.1.0",
    "autoprefixer": "^10.4.16",
    "gh-pages": "^6.0.0",
    "jsdom": "^22.1.0",
    "postcss": "^8.4.31",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^0.34.6"
  }
}
